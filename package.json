{
  "name": "linters",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "format": "prettier --write '*/**/*.{js,md,json}'",
    "lint:ts": "eslint --ext .js packages",
    "semantic-release": "lerna exec --concurrency 1 -- npx --no-install semantic-release -e semantic-release-monorepo"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@linters/commitlint-config": "^1.1.0",
    "@linters/eslint-config-node": "^1.0.0",
    "@linters/prettier-config": "^1.0.0",
    "@linters/semantic-release": "^1.4.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/npm": "7.0.6",
    "@semantic-release/release-notes-generator": "9.0.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "semantic-release": "^17.1.2",
    "semantic-release-monorepo": "^7.0.3"
  }
}
