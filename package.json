    "@linters/commitlint-config": "^1.7.0",
    "@linters/eslint-config-node": "^1.10.0",
    "@linters/prettier-config": "^1.3.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "4.2.3",
    "lerna": "4.0.0",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1"
  }
}
